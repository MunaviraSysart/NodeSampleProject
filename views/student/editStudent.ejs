<div class="container mt-5" style="max-width: 800px;">

    <h2 class='title'>Edit Student</h2>
    <form action="/app/editStudent/<%=studentData._id%>" method='post' enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-6">
                <div class='input-group mb-3'>
                    <label class="form-label col-12">First Name</label>
                    <input type='text' class="form-control" name='fname' value="<%=studentData.fname%>"
                        placeholder="Enter your first name" required>
                </div>
            </div>
            <div class="col-md-6">
                <div class='input-group mb-3'>
                    <label class="form-label col-12">Last Name</label>
                    <input type='text' class="form-control" name='lname' value="<%=studentData.lname%>"
                        placeholder="Enter your last name" required>
                </div>
            </div>
            <div class="col-md-6">
                <div class='input-group mb-3'>
                    <label class="form-label col-12">DOB</label>
                    <input type='date' class="form-control" name='dob' value="<%=studentData.dob%>"
                        placeholder="Select your dob" required>
                </div>
            </div>
            <div class="col-md-6">
                <div class='input-group mb-3'>
                    <label class="form-label col-12">Email</label>
                    <input type='email' class="form-control" name='email' value="<%=studentData.email%>"
                        placeholder="Enter your email" required>
                </div>
            </div>
            <div class="col-md-6">
                <div class='input-group mb-3'>
                    <label class="form-label col-12">Phone</label>
                    <input type='number' class="form-control" pattern="[0-9]{10}" value="<%=studentData.phone%>"
                        title="Should contain 10 Numbers" name='phone' placeholder="Enter your phone number" required>
                </div>
            </div>
            <div class="col-md-6">
                <div class='input-group mb-3'>
                    <label class="form-label col-12">Course</label>
                    <input type='text' class="form-control" name='course' value="<%=studentData.course%>"
                        placeholder="Enter your course" required>
                </div>
            </div>
            <div class="col-md-6">
                <div class='input-group mb-3'>
                    <label class="form-label col-12">Address</label>
                    <textarea rows="3" class="form-control" name='address' value="<%=studentData.address%>"
                        placeholder="Enter your address" required><%=studentData.address%></textarea>

                </div>
            </div>
            <div class="col-md-6">
                <div class='input-group mb-3'>
                    <label class="form-label col-12">Photo</label>
                    <input type='file' class="form-control" name='photo' onchange="viewImage(event)" required>
                </div>
                <img id="imgView" width="40px" src="http://localhost:4000/<%=studentData.photo%>" />
            </div>
            <div class='col-md-12'>
                <button type="submit" class="btn btn-primary" style="float: right;">Submit</button>
                <!-- <input type='submit' value='submit'> -->
            </div>
        </div>
    </form>

</div>

<script>

    function viewImage(event) {
        document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0])
    }

    window.setTimeout(function () {
        $(".alert").fadeTo(500, 0).slideUp(500, function () {
            $(this).remove();
        });
    }, 2500);

</script>